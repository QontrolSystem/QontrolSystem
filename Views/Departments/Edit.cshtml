@model QontrolSystem.Models.Accounts.Department

@{
    ViewData["Title"] = "Edit Department";
}

@section Styles {
    <link href="~/css/departments/departments.css" rel="stylesheet" />
}

<div>
    <a href="@Url.Action("Index", "Departments")" class="back-btn">Back</a>
</div>

<div class="department-container">
    <div class="page-header">
        <h2 class="page-title">Edit Department</h2>
        <div class="header-divider"></div>
    </div>

    <div class="form-container">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()

            <!-- Hidden field for Department ID -->
            <input type="hidden" asp-for="DepartmentID" />

            <div class="form-group">
                <label asp-for="DepartmentName" class="form-label">Department Name</label>
                <input asp-for="DepartmentName" class="form-input" placeholder="Enter department name" />
                <span asp-validation-for="DepartmentName" class="validation-error"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="icon-save"></i>
                    Save Changes
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="icon-back"></i>
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}