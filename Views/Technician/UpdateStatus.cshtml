@model QontrolSystem.Models.Ticket.Ticket

@{
    ViewData["Title"] = "Update Ticket Status";
}

<h2>Update Status for: @Model.Title</h2>

<form asp-action="UpdateStatus" method="post">
    <input type="hidden" asp-for="TicketID" />

    <div class="form-group">
        <label for="ticketStatusId">Status</label>
        <select asp-for="TicketStatusID" asp-items="ViewBag.Statuses" class="form-control"></select>
    </div>

    <div class="form-group">
        <label for="workNotes">Work Notes (optional)</label>
        <textarea name="workNotes" class="form-control" rows="4"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="TicketDetails" asp-route-id="@Model.TicketID" class="btn btn-secondary">Cancel</a>
</form>

