@model QontrolSystem.Models.ViewModels.TechnicianDashboard


<div class="dashboard-container">
    <h1 class="dashboard-title">Technician Dashboard</h1>

    <!-- Summary Cards -->
    <div class="stats-grid">
        <a href="/Technician/AssignedTickets" class="stat-card-link">
            <div class="stat-card">
                <div class="stat-title">Total Assigned Tickets</div>
                <div class="stat-number">@Model.AssignedTickets.Count()</div>
            </div>
        </a>

        <a asp-controller="Technician" asp-action="OpenTickets" class="stat-card-link">
            <div class="stat-card">
                <div class="stat-title">Open Tickets</div>
                <div class="stat-number">@Model.OpenTickets</div>
            </div>
        </a>

        <a asp-controller="Technician" asp-action="InProgressTickets" class="stat-card-link">
            <div class="stat-card">
            <div class="stat-title">In Progress</div>
            <div class="stat-number">@Model.InProgressTickets</div>
        </div>
        </a>
        <a asp-controller="Technician" asp-action="ResolvedTickets" class="stat-card-link">
            <div class="stat-card">
                <div class="stat-title">Resolved</div>
                <div class="stat-number">@Model.ResolvedTickets</div>
            </div>
        </a>
        <a asp-controller="Technician" asp-action="OverdueTickets" class="stat-card-link">
            <div class="stat-card">
                <div class="stat-title">Overdue</div>
                <div class="stat-number">@Model.OverdueTickets</div>
            </div>
        </a>
    </div>

    <!-- Ticket Table -->
    <h2 class="chart-title">Your Assigned Tickets</h2>
    <div class="chart-card">
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Status</th>
                    <th>Category</th>
                    <th>Urgency</th>
                    <th>Days Open</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model.AssignedTickets)
                {
                    <tr>
                        <td>@ticket.Title</td>
                        <td>@ticket.Status</td>
                        <td>@ticket.Category</td>
                        <td>@ticket.Urgency</td>
                        <td>@ticket.DaysOpen</td>
                        <td>@ticket.CreatedAt</td>
                        <td>
                            <a href="@Url.Action("TicketDetails", "Technician", new { id = ticket.TicketID })" class="btn btn-primary">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Quick Links Section -->
    <div class="quick-links-section">
        <h2 class="section-title">Quick Links</h2>

        <div class="quick-links-list">
            <div class="link-item">
                <a href="/Technician/AssignedTickets" class="link-anchor">🗂️ Assigned Tickets</a>
            </div>
            <div class="link-item">
                <a asp-controller="Ticket" asp-action="Create" class="link-anchor">🆕 Create Ticket</a>
            </div>
            <div class="link-item">
                <a asp-controller="Technician" asp-action="MyProfile" class="link-anchor">👤 My Profile</a>
            </div>
            <div class="link-item">
                <a href="/Technician/AuditLogs" class="link-anchor">📋 View Audit Logs</a>
            </div>
        </div>
    </div>
