@model QontrolSystem.Models.ViewModels.TechnicianDashboard


<div class="dashboard-container">
    <h1 class="dashboard-title">Welcome, Technician</h1>

    <!-- Summary Cards -->
    <!-- Total Assigned Tickets-->
    <div class="stats-grid">
        <a href="/Technician/AssignedTickets" class="stat-card-link">
            <div class="stat-card stat-assignedtickets">
                <div class="stat-title">Total Assigned Tickets</div>
                <div class="stat-number">@Model.AssignedTickets.Count()</div>
            </div>
        </a>
        <!-- Open Tickets-->
        <a asp-controller="Technician" asp-action="OpenTickets" class="stat-card-link">
            <div class="stat-card stat-open">
                <div class="stat-title">Open Tickets</div>
                <div class="stat-number">@Model.OpenTickets</div>
            </div>
        </a>
        <!-- InProgress Tickets-->
        <a asp-controller="Technician" asp-action="InProgressTickets" class="stat-card-link">
            <div class="stat-card stat-inprogress">
            <div class="stat-title">In Progress</div>
            <div class="stat-number">@Model.InProgressTickets</div>
        </div>
        </a>
        <!-- Resolved Tickets-->
        <a asp-controller="Technician" asp-action="ResolvedTickets" class="stat-card-link">
            <div class="stat-card stat-resolved">
                <div class="stat-title">Resolved</div>
                <div class="stat-number">@Model.ResolvedTickets</div>
            </div>
        </a>
        <!-- Overdue Tickets -->
        <a asp-controller="Technician" asp-action="OverdueTickets" class="stat-card-link">
            <div class="stat-card stat-overdue">
                <div class="stat-title">Overdue</div>
                <div class="stat-number">@Model.OverdueTickets</div>
            </div>
        </a>
    </div>



    <!-- Audit Logs Section -->
    <div class="chart-card">
        <h2 class="chart-title">Technician Ticket Overview</h2>
        <div class="chart-container">
            <canvas id="auditLogsChart"></canvas>
        </div>
    </div>

    <!-- Quick Links Section -->
    <div class="quick-links-section">
        <h2 class="section-title">Quick Links</h2>

        <div class="quick-links-list">
            <div class="link-item">
                <a href="/Technician/AssignedTickets" class="link-anchor">🗂️ Assigned Tickets</a>
            </div>
            <div class="link-item">
                <a asp-controller="Ticket" asp-action="Create" class="link-anchor">🆕 Create Ticket</a>
            </div>
            <div class="link-item">
                <a asp-controller="Technician" asp-action="MyProfile" class="link-anchor">👤 My Profile</a>
            </div>
            <div class="link-item">
                <a href="/Technician/AuditLogs" class="link-anchor">📋 View Audit Logs</a>
            </div>
        </div>
    </div>


    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const ctx = document.getElementById('auditLogsChart').getContext('2d');

            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['In Progress', 'Overdue', 'TotalAssigned'],
                    datasets: [{
                        label: 'Ticket Overview',
                        data: [
                            @Model.InProgressTickets,
                            @Model.OverdueTickets,
                            @Model.TotalAssignedTickets,
                            Math.max(0, @Model.TotalAssignedTickets - @Model.InProgressTickets - @Model.OverdueTickets)
                        ],
                        backgroundColor: [
                            '#fef9c3', // yellow
                            '#ef4444', // red
                            '#2563eb'  // blue
                        ],
                        borderColor: '#ffffff',
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '60%',
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                color: '#374151',
                                font: {
                                    size: 14,
                                    weight: '600'
                                }
                            }
                        },
                        title: {
                            display: true,
                            text: 'Technician Ticket Overview',
                            font: {
                                size: 16,
                                weight: 'bold'
                            },
                            color: '#2563eb'
                        },
                        tooltip: {
                            enabled: true,
                            backgroundColor: 'rgba(0,0,0,0.7)',
                            titleFont: { weight: 'bold' },
                            callbacks: {
                                label: function(context) {
                                    let label = context.label || '';
                                    let value = context.parsed || 0;
                                    return `${label}: ${value} tickets`;
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>


   