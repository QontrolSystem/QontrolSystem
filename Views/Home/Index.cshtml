@{
    ViewData["Title"] = "Home Page";
   
}
@section Styles {
    <link rel="stylesheet" href="~/css/home/home.css" asp-append-version="true" />
}
<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="hero-icon">
            <i class="fas fa-headset"></i>
        </div>
        <h1 class="hero-title">Welcome to Qontrol System</h1>
        <p class="hero-subtitle">
            Streamline your support workflow with our enterprise-grade ticketing solution.
            Manage requests efficiently, track progress seamlessly, and deliver exceptional service.
        </p>
        <div class="action-buttons">
            <a asp-controller="Account" asp-action="Login" class="btn btn-primary">
                <i class="fas fa-plus"></i>
                Create New Ticket
            </a>

        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section">
    <div class="container">
        <h2 class="section-title">Powerful Features</h2>
        <p class="section-subtitle">
            Everything you need to manage support tickets and deliver outstanding customer service
        </p>

        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon create">
                    <i class="fas fa-ticket-alt"></i>
                </div>
                <h3 class="feature-title">Create & Submit</h3>
                <p class="feature-description">
                    Quickly create detailed support tickets with attachments, priority levels,
                    and automatic routing to the right teams.
                </p>
            </div>

            <div class="feature-card">
                <div class="feature-icon track">
                    <i class="fas fa-chart-line"></i>
                </div>
                <h3 class="feature-title">Track Progress</h3>
                <p class="feature-description">
                    Monitor ticket status in real-time with detailed timelines, updates,
                    and automated notifications for all stakeholders.
                </p>
            </div>

            <div class="feature-card">
                <div class="feature-icon manage">
                    <i class="fas fa-users-cog"></i>
                </div>
                <h3 class="feature-title">Team Management</h3>
                <p class="feature-description">
                    Assign tickets to team members, set priorities, manage workloads,
                    and generate comprehensive performance reports.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="stats-section">
    <div class="container">
        <div class="stats-grid">
            <div class="stat-item">
                <span class="stat-number">2,847</span>
                <span class="stat-label">Tickets Resolved</span>
            </div>
            <div class="stat-item">
                <span class="stat-number">98.5%</span>
                <span class="stat-label">Customer Satisfaction</span>
            </div>
            <div class="stat-item">
                <span class="stat-number">24/7</span>
                <span class="stat-label">Support Available</span>
            </div>
            <div class="stat-item">
                <span class="stat-number">15 min</span>
                <span class="stat-label">Avg Response Time</span>
            </div>
        </div>
    </div>
</section>