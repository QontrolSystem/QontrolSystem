@model List<QontrolSystem.Models.User>
@{
    ViewBag.Title = "User Management";
}

<h2>System Users</h2>

<a class="btn btn-success mb-3" href="@Url.Action("Create")">Create New User</a>

<form asp-action="UserManagementIndex" method="get" class="mb-3 d-flex">
    <input type="text" name="searchString" value="@Context.Request.Query["searchString"]" class="form-control me-2" placeholder="Search users..." />
    <button type="submit" class="btn btn-outline-primary">Search</button>
</form>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName @user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Role.RoleName</td>
                <td>@user.Department.DepartmentName</td>
                <td>
                    <a class="btn btn-info btn-sm" href="@Url.Action("Details", new { id = user.UserID })">Details</a>
                    <a class="btn btn-primary btn-sm" href="@Url.Action("Edit", new { id = user.UserID })">Edit</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = user.UserID })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>