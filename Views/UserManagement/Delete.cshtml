@model QontrolSystem.Models.User
@{
    ViewBag.Title = "Delete User";
}
@section Styles {
    <link href="~/css/delete-user.css" rel="stylesheet" />
}

<div class="delete-user-container">
    <h2 class="page-title">Confirm Delete</h2>

    <div class="warning-card">
        <div class="danger-alert">
            <div class="danger-alert-title">Warning!</div>
            This action cannot be undone. The user will be permanently removed from the system.
        </div>

        <p class="warning-message">Are you sure you want to delete the following user?</p>

        <div class="user-info">
            <div class="user-name">@Model.FirstName @Model.LastName</div>
            <div class="user-email">@Model.Email</div>
        </div>
    </div>

    <form asp-action="DeleteConfirmed" method="post" class="delete-form">
        <input type="hidden" asp-for="UserID" />
        <button type="submit" class="action-btn btn-delete">Delete User</button>
        <a asp-action="UserManagementIndex" class="action-btn btn-cancel">Cancel</a>
    </form>
</div>
