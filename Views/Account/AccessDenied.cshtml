@{
    ViewBag.Title = "Rejected Account";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Registration Rejected</title>
    <link href="~/css/account/access-denied.css" rel="stylesheet" />
    <link href="~/css/base/variables.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="logo">
            <img src="~/Images/logo.png" alt="Qontrol System Logo" />
        </div>
        <div class="status-icon"></div>
        <div class="subtitle">Account Status</div>
        <h1>Registration Rejected</h1>
        <p>Unfortunately, your account application has been rejected after review by our administrators.</p>
        <div class="highlight">
            <p>Your registration did not meet our current requirements or approval criteria.</p>
        </div>
        <p>This decision may be based on various factors including incomplete information, policy compliance, or current capacity limitations. You may reapply in the future or contact support for clarification.</p>
        <div class="contact-section">
            <p>For more information about this decision or to discuss your application:</p>
            <a href="mailto:support@qontrolsystem.com" class="contact-btn">
                📧 Contact Support
            </a>
        </div>
        <div class="back-btn-cont">
            <a asp-action="Login" class="action-btn btn-back">Back</a>
        </div>
        <div class="footer-text">
            © 2025 QontrolSystem. All rights reserved.
        </div>
    </div>
</body>
</html>