@{
    ViewBag.Title = "Login";
}
@section Styles {
    <link href="~/css/login.css" rel="stylesheet" />
}

@if (ViewBag.Error != null)
{
    <div class="error-message">@ViewBag.Error</div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}


<div class="login-container">
    <div class="login-card">
        <!-- Left side - Welcome section -->
        <div class="welcome-section">
            <div class="logo-container">
                <img src="~/Images/logo.png" alt="Qontrol System Logo" />
            </div>

            <h1 class="welcome-title">Welcome to Qontrol</h1>
            <p class="welcome-subtitle">Your trusted solution for ticketing systems, support, and more</p>

            <ul class="feature-list">
                <li class="feature-item">Secure Authentication</li>
                <li class="feature-item">Real-time Updates</li>
                <li class="feature-item">24/7 Support</li>
            </ul>
        </div>

        <!-- Right side - Login form -->
        <div class="form-section">
            <div class="form-container">
                <div class="form-header">
                    <h2 class="form-title">Login</h2>
                    <p class="form-subtitle">Access your Qontrol account</p>
                </div>

                <form asp-action="Login" method="post" class="login-form">
                    <div class="form-group">
                        <label class="form-label">Email Address</label>
                        <input type="email" name="email" class="form-input" placeholder="Enter your email" required />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Password</label>
                        <input type="password" name="password" class="form-input" placeholder="Enter your password" required />
                    </div>

                    <button type="submit" class="login-button">Login</button>

                    <div class="register-link-container">
                        <p>
                            Don't have an account?
                            <a asp-controller="Account" asp-action="Register" class="register-link">
                                Register here
                            </a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>