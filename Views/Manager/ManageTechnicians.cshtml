@model List<QontrolSystem.Models.ViewModels.ManageTechnicians>

@{
    ViewData["Title"] = "Manage Technicians";
}

<h2>Manage Technicians</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Status</th>
            <th>Approval</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tech in Model)
        {
            <tr>
                <td>@tech.FullName</td>
                <td>@tech.Email</td>

                <td>
                    @if (tech.IsActive)
                    {
                        <span class="text-success">Active</span>
                    }
                    else
                    {
                        <span class="text-danger">Inactive</span>
                    }
                </td>
                <td>
                    @if (tech.IsApproved)
                    {
                        <span class="text-success">Approved</span>
                    }
                    else
                    {
                        <span class="text-warning">Pending</span>
                    }
                </td>

                <td>
                    <a class="btn btn-sm btn-primary" asp-action="EditTechnician" asp-route-id="@tech.UserID">Edit</a>
                    <a class="btn btn-sm btn-secondary" asp-action="ToggleApproval" asp-route-id="@tech.UserID">
                        @(tech.IsApproved ? "Unapprove" : "Approve")
                    </a>
                    <a class="btn btn-sm btn-warning" asp-action="ToggleStatus" asp-route-id="@tech.UserID">
                        @(tech.IsActive ? "Deactivate" : "Activate")
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
